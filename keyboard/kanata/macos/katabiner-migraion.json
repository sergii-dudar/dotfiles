[
    {
        "description": "play_or_pause",
        "manipulators": [
            {
                "from": {
                    "key_code": "down_arrow",
                    "modifiers": {
                        "mandatory": [
                            "left_shift",
                            "left_option"
                        ]
                    }
                },
                "to": [
                    {
                        "consumer_key_code": "play_or_pause"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "play_next",
        "manipulators": [
            {
                "from": {
                    "key_code": "right_arrow",
                    "modifiers": {
                        "mandatory": [
                            "left_shift",
                            "left_option"
                        ]
                    }
                },
                "to": [
                    {
                        "consumer_key_code": "scan_next_track"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "play_previous",
        "manipulators": [
            {
                "from": {
                    "key_code": "left_arrow",
                    "modifiers": {
                        "mandatory": [
                            "left_shift",
                            "left_option"
                        ]
                    }
                },
                "to": [
                    {
                        "consumer_key_code": "scan_previous_track"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "stop MPD",
        "manipulators": [
            {
                "from": {
                    "key_code": "up_arrow",
                    "modifiers": {
                        "mandatory": [
                            "left_control",
                            "left_option"
                        ]
                    }
                },
                "to": [
                    {
                        "shell_command": "/opt/homebrew/bin/mpc stop ; /opt/homebrew/bin/sketchybar --trigger now_playing_update"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "play_or_pause MPD",
        "manipulators": [
            {
                "from": {
                    "key_code": "down_arrow",
                    "modifiers": {
                        "mandatory": [
                            "left_control",
                            "left_option"
                        ]
                    }
                },
                "to": [
                    {
                        "shell_command": "/opt/homebrew/bin/mpc toggle ; /opt/homebrew/bin/sketchybar --trigger now_playing_update"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "play_next MPD",
        "manipulators": [
            {
                "from": {
                    "key_code": "right_arrow",
                    "modifiers": {
                        "mandatory": [
                            "left_control",
                            "left_option"
                        ]
                    }
                },
                "to": [
                    {
                        "shell_command": "/opt/homebrew/bin/mpc next ; /opt/homebrew/bin/sketchybar --trigger now_playing_update"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "play_previous MPD",
        "manipulators": [
            {
                "from": {
                    "key_code": "left_arrow",
                    "modifiers": {
                        "mandatory": [
                            "left_control",
                            "left_option"
                        ]
                    }
                },
                "to": [
                    {
                        "shell_command": "/opt/homebrew/bin/mpc prev ; /opt/homebrew/bin/sketchybar --trigger now_playing_update"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "volume_decrement",
        "manipulators": [
            {
                "from": {
                    "key_code": "left_arrow",
                    "modifiers": {
