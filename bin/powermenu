#!/bin/env bash

SUSPEND="â¸ Sleep"
LOCK="ğŸ”’ Lock"
LOGOUT="ğŸšª Logout"
REBOOT="ğŸ” Restart"
SHUTDOWN="â›” Shutdown"
LOCK="ğŸ”’ Lock"
LOGOUT="ğŸšª Logout"
SUSPEND="â¸ Sleep"
REBOOT="ğŸ” Restart"
SHUTDOWN="â›” Shutdown"
LOCK="ğŸ”’ Lock"
SUSPEND="â¸ Sleep"
REBOOT="ğŸ” Restart"
SHUTDOWN="â›” Shutdown"
LOGOUT="ğŸšª Logout"

choice=$(printf "$LOCK\n$LOGOUT\n$SUSPEND\n$REBOOT\n$SHUTDOWN" | rofi -dmenu)
case "$choice" in
    "$LOCK") sh $HOME/dotfiles/bin/screen-lock ;;
    "$LOGOUT") pkill -KILL -u "$USER" ;;
    "$SUSPEND") systemctl suspend && sh $HOME/dotfiles/bin/screen-lock ;;
    "$REBOOT") systemctl reboot ;;
    "$REBOOT") systemctl reboot ;;
    "$SHUTDOWN") systemctl poweroff ;;
esac