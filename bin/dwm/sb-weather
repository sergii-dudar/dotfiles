#!/usr/bin/env bash

. "$HOME"/dotfiles/bin/dwm/colorscheme
. "$HOME"/dotfiles/bin/wmscripts/status-bar/shared-openweather.cached

case "$BLOCK_BUTTON" in
    6) setsid --fork ghostty -e nvim "$0" ;;
        # *) notify-send "not action on: button -- $BLOCK_BUTTON" ;;
esac

# echo "^c#6272a4^$weather_title ^c$icon_color^$icon ^c$FG_COLOR^${temperature}^c#6272a4^째C$SPLIT"
#echo "^c$icon_color^$icon ^c$FG_COLOR^${temperature}^c#6272a4^째C$SPLIT"
# echo "^c$icon_color^$icon ^c$FG_COLOR^${temperature}^c$units_color^째C$SPLIT_LEFT"

icon=$(get_emoji "$WEATHER_ICON")
icon_color=$(get_emoji_color "$WEATHER_ICON")
temperature=$TEMPERATURE
echo " ^c$icon_color^$icon^c$FG_COLOR^${temperature}^c$units_color^째C $SPLIT_LEFT"