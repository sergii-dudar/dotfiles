# ; date = " %{F#bd93f9}  %{F#a6d189}%H:%M %{F#8caaee}%p%{F-} "
# ; time-alt = " %{F#7c8377}  %{F#61afef}%a, %d %b %Y%{F-} "
# date =      " %{F#bd93f9} %{T13} %{T-}%{F#a6d189}%I:%M%{T13} %{T-}%{F#8caaee}%p%{F-} "
# time-alt =  " %{F#bd93f9} %{T13} %{T-}%{F#6272a4}%H:%M %{F-} "
# label = %date%%time%
#
