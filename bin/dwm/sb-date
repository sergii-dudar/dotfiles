#!/usr/bin/env bash
# Display the current time in HH:MM:SS.

notify() {
    notify-send --icon=office-calendar-symbolic \
        --expire-time=2000 \
        --hint=string:x-canonical-private-synchronous:"$1" "$@"
}

case $BLOCK_BUTTON in
    1) notify " Date: " "$(date '+%A, %b %d')" ;;
        # 3) setsid --fork kitty -e nvim "$0" ;;
    2) setsid --fork gnome-clocks ;;
    3) setsid --fork gnome-calendar ;;
esac

. "$HOME"/dotfiles/bin/dwm/colorscheme
time_icon_color="#bd93f9"
date_icon_color="#7c8377"

time_color="#a6d189"
timep_color="#8caaee"
date_color="#6272a4"

# time=$(date '+%H:%M')
time=$(date '+%H:%M')
timep=$(date '+%p')
# datenow=$(date '+%a, %b %d')

time_part="^c$time_icon_color^󰥔 ^c$time_color^$time ^c$timep_color^$timep"
# date_part="^c$date_icon_color^ ^c$date_color^$datenow"

# echo "$time_part $SPLIT $date_part^d^ $SPLIT"
echo "$time_part$SPLIT_LEFT"