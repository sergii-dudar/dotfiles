# date =      " %{F#7c8377} %{T13} %{T-}%{F#6272a4}%a,%{T13} %{T-}%b%{T13} %{T-}%d%{F-} "
# time-alt =  " %{F#7c8377} %{T13} %{T-}%{F#a6d189}%A,%{T13} %{T-}%d-%m-%Y%{F-} "
# label = %date%%time%