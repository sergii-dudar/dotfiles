#!/usr/bin/env bash

# Load environment variables from private.env
if [ -f "$HOME"/private.env ]; then
    source "$HOME"/private.env
else
    echo "Error: ~/private.env file not found!"
    exit 1
fi

# CITY="Kyiv"
CITY="Vinnytsia"
UNITS="metric" # Use "imperial" for Fahrenheit
LANG="en"

# Fetch weather data
response=$(curl -s "http://api.openweathermap.org/data/2.5/weather?q=${CITY}&appid=${OPEN_WEATHER_API_KEY}&units=${UNITS}&lang=${LANG}")

# echo "apikey: $OPEN_WEATHER_API_KEY"
# echo "$response"

# Extract temperature and weather condition code
temperature=$(echo "$response" | jq '.main.temp' | xargs printf "%.0f")
weather_code=$(echo "$response" | jq '.weather[0].id')
weather_icon=$(echo "$response" | jq -r ".weather[0].icon")
weather_title=$(echo "$response" | jq -r '.weather[0].main')

case $weather_icon in
    01d)
        icon=""
        icon_color="#f1fa8c"
        ;; # Clear sky (Day) ☀
    01n)
        icon=""
        icon_color="#f1fa8c"
        ;; # Clear sky (Night) 🌙
    02d)
        icon=""
        icon_color="#f1fa8c"
        ;; # Few clouds (Day) 🌤
    02n)
        icon=""
        icon_color="#8be9fd"
        ;; # Few clouds (Night) ☁🌙
    03*)
        icon=""
        icon_color="#8be9fd"
        ;; # Scattered clouds 🌥
    04*)
        icon=""
        icon_color="#8be9fd"
        ;; # Broken clouds ☁☁
    09d)
        icon=""
        icon_color="#0189cc"
        ;; # Shower rain 🌧
    09n)
        icon=""
        icon_color="#0189cc"
        ;; # Shower rain 🌧 (same as day)
    10d)
        icon=""
        icon_color="#0189cc"
        ;; # Rain (Day) 🌦
    10n)
        icon=""
        icon_color="#0189cc"
        ;; # Rain (Night) 🌧🌙
    11d)
        icon=""
        icon_color="#0189cc"
        ;; # Thunderstorm ⚡
    11n)
        icon=""
        icon_color="#f1fa8c"
        ;; # Thunderstorm (Night) ⚡🌙
    13d)
        icon=""
        icon_color="#ffffff"
        ;; # Snow ❄
    13n)
        icon=""
        icon_color="#ffffff"
        ;; # Snow ❄ (same as day)
    50d)
        icon=""
        icon_color="#0189cc"
        ;; # Mist 🌫
    50n)
        icon=""
        icon_color="#0189cc"
        ;; # Mist (Night) 🌫🌙
    *)
        icon=""
        icon_color="#0189cc"
        ;; # Default (Unknown Weather) ☁
esac

units_color="#6272a4"