#!/usr/bin/env bash

# Load environment variables from private.env
if [ -f "$HOME"/private.env ]; then
    source "$HOME"/private.env
else
    echo "Error: ~/private.env file not found!"
    exit 1
fi

# CITY="Kyiv"
CITY="Vinnytsia"
UNITS="metric" # Use "imperial" for Fahrenheit
LANG="en"

# Fetch weather data
response=$(curl -s "http://api.openweathermap.org/data/2.5/weather?q=${CITY}&appid=${OPEN_WEATHER_API_KEY}&units=${UNITS}&lang=${LANG}")

# echo "apikey: $OPEN_WEATHER_API_KEY"
# echo "$response"

# Extract temperature and weather condition code
temperature=$(echo "$response" | jq '.main.temp' | xargs printf "%.0f")
weather_code=$(echo "$response" | jq '.weather[0].id')
weather_icon=$(echo "$response" | jq -r ".weather[0].icon")
weather_title=$(echo "$response" | jq -r '.weather[0].main')

case $weather_icon in
    01d)
        icon="îŒ"
        icon_color="#f1fa8c"
        ;; # Clear sky (Day) â˜€
    01n)
        icon="î°"
        icon_color="#f1fa8c"
        ;; # Clear sky (Night) ğŸŒ™
    02d)
        icon="îŒ‚"
        icon_color="#f1fa8c"
        ;; # Few clouds (Day) ğŸŒ¤
    02n)
        icon="î¹"
        icon_color="#8be9fd"
        ;; # Few clouds (Night) â˜ğŸŒ™
    03*)
        icon="îŒ½"
        icon_color="#8be9fd"
        ;; # Scattered clouds ğŸŒ¥
    04*)
        icon="îŒ’"
        icon_color="#8be9fd"
        ;; # Broken clouds â˜â˜
    09d)
        icon="îŒ–"
        icon_color="#0189cc"
        ;; # Shower rain ğŸŒ§
    09n)
        icon="îŒ–"
        icon_color="#0189cc"
        ;; # Shower rain ğŸŒ§ (same as day)
    10d)
        icon="îŒˆ"
        icon_color="#0189cc"
        ;; # Rain (Day) ğŸŒ¦
    10n)
        icon="îŒ³"
        icon_color="#0189cc"
        ;; # Rain (Night) ğŸŒ§ğŸŒ™
    11d)
        icon="îŒ"
        icon_color="#0189cc"
        ;; # Thunderstorm âš¡
    11n)
        icon="î¸"
        icon_color="#f1fa8c"
        ;; # Thunderstorm (Night) âš¡ğŸŒ™
    13d)
        icon="î¯"
        icon_color="#ffffff"
        ;; # Snow â„
    13n)
        icon="î¯"
        icon_color="#ffffff"
        ;; # Snow â„ (same as day)
    50d)
        icon="îŒƒ"
        icon_color="#0189cc"
        ;; # Mist ğŸŒ«
    50n)
        icon="î†"
        icon_color="#0189cc"
        ;; # Mist (Night) ğŸŒ«ğŸŒ™
    *)
        icon="î´"
        icon_color="#0189cc"
        ;; # Default (Unknown Weather) â˜
esac

units_color="#6272a4"