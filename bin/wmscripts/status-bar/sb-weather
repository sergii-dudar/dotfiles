        icon="îˆ"
        ;; # Broken clouds
    04n)
        icon_color="#8be9fd"
        icon="îˆ¦"
        ;; # Broken clouds
    09d)
        icon="î¼"
        icon_color="#0189cc"
        ;; # Shower rain ğŸŒ§
    09n)
        icon="î¼›"
        icon_color="#0189cc"
        ;; # Shower rain ğŸŒ§ (same as day)
    10d)
