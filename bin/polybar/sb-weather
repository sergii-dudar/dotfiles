#!/usr/bin/env bash

. "$HOME"/dotfiles/bin/polybar/colorscheme
#. "$HOME"/dotfiles/bin/wmscripts/status-bar/sb-weather
weather_icon=02d
temperature=-2
units_color="#6272a4"

# just template in case need change polybar config a lot and to not push weather api a lot
# echo "%{F#50fa7b}îŒ‚ %{F-}%{F#94928F}-1%{F-}%{F#6272a4}Â°C%{F-}"

function of_font() {
    echo %\{T"$2"\}"$1"%\{T-\}
}

function get_emoji() {
    case $1 in
        01d) icon=$(of_font "â˜€ï¸" 19)  ;; # Clear sky (day)
        01n) icon=$(of_font "ğŸŒ™" 18) ;; # Clear sky (night) "ğŸŒ™" "ğŸŒ•"
        02d) icon=$(of_font "ğŸŒ¤ï¸" 20) ;; # Few clouds (day) "ğŸŒ¤" ğŸŒ¤ï¸"
        02n) icon=$(of_font "ğŸŒ¥" 21)  ;; # Few clouds (night) "ğŸŒ¥" "â˜ï¸"
        03d) icon=$(of_font "ğŸŒ¥ï¸" 21) ;; # Scattered clouds
        03n) icon=$(of_font "â˜ï¸" 20)  ;; # Scattered clouds
        04d) icon=$(of_font "ğŸŒ¥" 21)  ;; # # Broken clouds "ğŸŒ¥" "â˜ï¸"
        04n) icon=$(of_font "ğŸŒ¥" 21)  ;; # Broken clouds "ğŸŒ¥" "â˜ï¸"
        09d) icon=$(of_font "ğŸŒ§ï¸" 19) ;; # Shower rain (day) "ğŸŒ§ï¸" "ğŸŒ§"
        09n) icon=$(of_font "ğŸŒ§ï¸" 19) ;; # Shower rain (night) "ğŸŒ§ï¸" "ğŸŒ§"
        10d) icon=$(of_font "ğŸŒ¦" 19)  ;; # Rain (day) "â›ˆ" "ğŸŒ¦"
        10n) icon=$(of_font "â›ˆ" 19)  ;; # Rain (night) "â›ˆ" "ğŸŒ§"
        11d) icon=$(of_font "ğŸŒ©" 19) ;; # Thunderstorm (day) "ğŸŒ©" "â›ˆ"
        11n) icon=$(of_font "ğŸŒ©" 19) ;; # Thunderstorm (night)
        13d) icon=$(of_font "ğŸŒ¨ï¸" 18)  ;; # Snow (day) "ğŸŒ¨ï¸" "â„ï¸"
        13n) icon=$(of_font "ğŸŒ¨ï¸" 18)  ;; # Snow (night) "ğŸŒ¨ï¸" "â„ï¸"
        50d) icon=$(of_font "ğŸŒ«" 18) ;; # Mist (day)
        50n) icon=$(of_font "ğŸŒ«" 18) ;; # Mist (night)
        *) icon=$(of_font "âœ¨" 18)   ;; # Unknown condition
    esac

    echo "$icon"
}


# echo "$(of_color "$icon " $icon_color)$(of_color $temperature $FG_COLOR)$(of_color "Â°C" $units_color)"
