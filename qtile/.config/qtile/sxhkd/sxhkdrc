super + p
    pkill -USR1 -x sxhkd

super + shift + Return
    krusader

#Rofi & dmenu

super + d
    rofi -show drun -show-icons -font "Noto Sans 14"

alt + z; {a,s}
   {viddesc, poddesc}

super + t
    qtheme.sh

super + g
    kate

# Application Keybindings

super + w
    flatpak run com.vivaldi.Vivaldi

super + shift + w
   flatpak run com.vivaldi.Vivaldi --private-window

alt + s
 flatpak run com.todoist.Todoist

alt + n 
 flatpak run com.discordapp.Discord

ctrl + alt + s
    flameshot gui

#Audio Keybindings

XF86AudioRaiseVolume
        amixer -c 1 -- sset Master 2db+

XF86AudioLowerVolume
        amixer -c 1 -- sset Master 2db-

XF97AudioMute
        amixer -c 1 -- sset Master toggle

alt + d
        pactl set-sink-volume 0 +5% 

alt + a
        pactl set-sink-volume 0 -5% 

XF86AudioPlay
    playerctl play-pause

ctrl + alt + p
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

ctrl + shift + period
    playerctl next

ctrl + shift + comma
    playerctl previous

XF86AudioStop
    playerctl stop

alt + {h,j,k,l}
   mpc {prev,next,play,pause}

