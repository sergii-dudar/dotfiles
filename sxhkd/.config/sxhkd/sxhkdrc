#alt + space
#    rofi -show

super + q
    bash $HOME/dotfiles/bin/powermenu

ctrl + alt + q
    bash $HOME/dotfiles/bin/screen-lock

super + space
    bash $HOME/dotfiles/bin/change_language.sh

