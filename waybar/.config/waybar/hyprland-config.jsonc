// -*- mode: jsonc -*-
[
    // Main (default) monitor
    {
        // "layer": "top", // Waybar at top layer
        // "position": "bottom", // Waybar position (top|bottom|left|right)
        "height": 30, // Waybar height (to be removed for auto height)
        // "width": 1280, // Waybar width
        "spacing": 4, // Gaps between modules (4px)
        "output": "!HDMI-A-3",
        "modules-left": [
            // "group/group-runners", -- TODO: waiting fix of https://github.com/Alexays/Waybar/issues/4829
            "custom/weather",
            "hyprland/submap",
            "idle_inhibitor",
            "custom/hypr-scratchpad",
            "custom/media",
            "hyprland/window"
        ],
        "modules-center": [
            "clock#date",
            "hyprland/workspaces",
            "clock"
        ],
        "modules-right": [
            // "mpd",
            // "hyprland/language",
            "custom/language",
            "pulseaudio",
            "custom/hyprsunset",
            "custom/brightness",
            "battery",
            "memory",
            "cpu",
            "temperature",
            "disk",
            // "custom/pacman-updates",
            "privacy",
            "network",
            "tray"
            // "image#runner-power" -- -- TODO: waiting fix of https://github.com/Alexays/Waybar/issues/4829
        ],
        "include": [
            "~/.config/waybar/module/hyprland.jsonc",
            "~/.config/waybar/module/clock.jsonc",
            "~/.config/waybar/module/system.jsonc",
            "~/.config/waybar/module/custom.jsonc",
            "~/.config/waybar/module/other.jsonc",
            "~/.config/waybar/module/runners.jsonc",
            "~/.config/waybar/module/simple.jsonc"
        ]
    },
    // Second vertical monitor
    {
        // "layer": "top", // Waybar at top layer
        // "position": "bottom", // Waybar position (top|bottom|left|right)
        "height": 30, // Waybar height (to be removed for auto height)
        // "width": 1280, // Waybar width
        "spacing": 4, // Gaps between modules (4px)
        "output": "HDMI-A-3",
        "modules-left": [
            // "group/group-runners", -- -- TODO: waiting fix of https://github.com/Alexays/Waybar/issues/4829
            "custom/weather",
            "hyprland/window"
        ],
        "modules-center": [
            "hyprland/workspaces",
        ],
        "modules-right": [
            "clock",
            "clock#date",
        ],
        "include": [
            "~/.config/waybar/module/hyprland.jsonc",
            "~/.config/waybar/module/clock.jsonc",
            "~/.config/waybar/module/system.jsonc",
            "~/.config/waybar/module/custom.jsonc",
            "~/.config/waybar/module/other.jsonc",
            "~/.config/waybar/module/runners.jsonc",
            "~/.config/waybar/module/simple.jsonc"
        ]
    }
]