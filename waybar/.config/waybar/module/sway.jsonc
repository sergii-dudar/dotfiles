{
    "sway/mode": {
        "format": "<span color='#8caaee' style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "<span color='#6272a4'>{icon}</span> <span color='#bd93f9'>{count}</span>",
        "show-empty": false,
        "format-icons": [
            "",
            ""
        ],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "custom/language": {
        "format": " {} ",
        "exec": "~/.config/waybar/module/shell/module.lang",
        "return-type": "text",
        "on-click": "~/.config/waybar/module/shell/change_language.w.sh",
        "on-click-right": "~/.config/waybar/module/shell/change_language.w.sh",
        "on-scroll-up": "~/.config/waybar/module/shell/change_language.w.sh",
        "on-scroll-down": "~/.config/waybar/module/shell/change_language.w.sh",
        "signal": 2
    },
