    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "active-only": false,
        "on-click": "activate",
        "sort-by-number": false,
        "format": " {name} {icon}",
        "format-icons": {
            "1": " ",
            "2": " ",
            "3": " ",
            "4": "󰆍 ",
            "5": " ",
            "6": "󰣇 ",
            "7": " ",
            "8": " ",
            "9": " "
