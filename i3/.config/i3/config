include ~/.config/i3/theme.conf
include ~/.config/i3/rules.conf
include ~/.config/i3/modes.conf
exec_always --no-startup-id ~/.config/i3/autostart.sh
exec_always --no-startup-id /usr/bin/autotiling
workspace_auto_back_and_forth yes
set $mod Mod4
floating_modifier $mod
font pango:monospace 0
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

set $ws0 "0"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

mouse_warping none
# switch to workspace using script
bindsym $mod+0 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws0
bindsym $mod+1 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws1
bindsym $mod+2 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws2
bindsym $mod+3 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws3
bindsym $mod+4 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws4
bindsym $mod+5 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws5
bindsym $mod+6 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws6
bindsym $mod+7 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws7
bindsym $mod+8 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws8
bindsym $mod+9 exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws9
bindsym $mod+minus exec --no-startup-id ~/.config/i3/scripts/i3_workspace_swapper.sh $ws10

bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+v [class="vol"] scratchpad show; move position center
bindsym $mod+n [class="ttrm"] scratchpad show; move position center
bindsym $mod+m [class="mus"] scratchpad show; move position center
bindsym $mod+b [class="news"] scratchpad show; move position center
bindsym $mod+c [class="fm"] scratchpad show; move position center
exec_always --no-startup-id pgrep -f '^kitty --class ttrm,ttrm' || kitty --class ttrm,ttrm
exec_always --no-startup-id pgrep -f '^kitty --class vol,vol' || kitty --class vol,vol -e pulsemixer
exec_always --no-startup-id pgrep -f '^kitty --class news,news' || kitty --class news,news -e newsboat
exec_always --no-startup-id pgrep -f '^kitty --class mus,mus' || kitty --class mus,mus -e ncmpcpp
exec_always --no-startup-id pgrep -f '^kitty --class fm,fm' || kitty --class fm,fm -e ranger