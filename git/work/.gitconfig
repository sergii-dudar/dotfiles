[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta

[user]
	name = IUADA144
	email = serhii.dudar@raiffeisen.ua

[interactive]
    diffFilter = delta --color-only

[init]
    defaultBranch = main

[delta]
    navigate = true    # use n and N to move between diff sections
    line-numbers = true

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    # tool = vimdiff
    tool = "nvimdiff"
    # conflictstyle = diff3

[mergetool]
	keepBackup = false
	prompt = false

[mergetool "nvimdiff"]
    # cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
    cmd = nvim -n -c "DiffviewOpen" "$MERGE"

[diff]
    colorMoved = default

[pull]
	rebase = false