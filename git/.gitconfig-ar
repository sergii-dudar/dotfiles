[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta

[user]
	name = Serhii Dudar
	email = shtanga.net@gmail.com

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = false
    line-numbers = true
    # syntax-theme = gruvbox-dark
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-style = file line-number syntax

[merge]
    tool = nvimdiff
    conflictstyle = merge # diff3

[alias]
    st = status -sb
    # lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate --date=short --color --decorate

[mergetool]
    prompt = false
    keepBackup = false

[mergetool "nvim"]
    cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[diff]
    colorMoved = default

[pull]
	rebase = false